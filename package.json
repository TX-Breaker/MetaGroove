{
  "name": "metagroove",
  "version": "1.0.0",
  "description": "Estensione browser intelligente per filtrare contenuti musicali su YouTube e SoundCloud",
  "main": "src/background/service-worker.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:extension": "node scripts/auto-test.js test",
    "test:launch": "node scripts/auto-test.js launch",
    "test:validate": "node scripts/auto-test.js validate",
    "test:firefox": "node scripts/auto-test.js firefox",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "clean": "rimraf dist/",
    "build:chrome": "webpack --env target=chrome --mode=production",
    "build:firefox": "webpack --env target=firefox --mode=production",
    "dev:chrome": "webpack --env target=chrome --mode=development --watch",
    "dev:firefox": "webpack --env target=firefox --mode=development --watch",
    "audit:fix": "npm audit fix --force"
  },
  "keywords": [
    "browser-extension",
    "music",
    "youtube",
    "soundcloud",
    "filter",
    "ai",
    "chrome",
    "firefox"
  ],
  "author": "MetaGroove Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@eslint/config-array": "^0.18.0",
    "@eslint/object-schema": "^2.1.4",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.3.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.1",
    "prettier": "^3.3.3",
    "puppeteer": "^23.11.1",
    "rimraf": "^6.0.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "dexie": "^4.0.8"
  },
  "browserslist": [
    "Chrome >= 88",
    "Firefox >= 78"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.config.js",
      "!src/assets/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
