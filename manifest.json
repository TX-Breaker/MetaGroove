{
  "manifest_version": 3,
  "name": "MetaGroove",
  "version": "1.1.0",
  "description": "Advanced music filtering for YouTube, YouTube Music & SoundCloud",
  
  "background": {
    "service_worker": "src/background/service-worker-simple.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "exclude_matches": [
        "*://music.youtube.com/*"
      ],
      "js": ["src/content/youtube-minimal.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://music.youtube.com/*",
        "*://*.music.youtube.com/*"
      ],
      "js": ["src/content/youtube-music.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.soundcloud.com/*",
        "*://soundcloud.com/*"
      ],
      "js": ["src/content/soundcloud-minimal.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "MetaGroove - Filtri Musicali",
    "default_icon": {
      "16": "src/assets/icons/MetaGroove_Logo.png",
      "48": "src/assets/icons/MetaGroove_Logo.png",
      "128": "src/assets/icons/MetaGroove_Logo.png"
    }
  },
  
  "icons": {
    "16": "src/assets/icons/MetaGroove_Logo.png",
    "48": "src/assets/icons/MetaGroove_Logo.png",
    "128": "src/assets/icons/MetaGroove_Logo.png"
  },

  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "*://music.youtube.com/*",
    "*://*.music.youtube.com/*",
    "*://*.soundcloud.com/*",
    "*://soundcloud.com/*",
    "*://www.googleapis.com/*"
  ]
}