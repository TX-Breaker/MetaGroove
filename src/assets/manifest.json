{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.1.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/MetaGroove_Logo.png",
    "128": "assets/icons/MetaGroove_Logo.png"
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtu.be/*"
      ],
      "exclude_matches": [
        "*://music.youtube.com/*"
      ],
      "js": ["content/youtube.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://music.youtube.com/*",
        "*://*.music.youtube.com/*"
      ],
      "js": ["content/youtube-music.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.soundcloud.com/*"
      ],
      "js": ["content/soundcloud.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "MetaGroove - Filtri Musicali",
    "default_icon": {
      "16": "assets/icons/MetaGroove_Logo.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.youtu.be/*",
    "*://*.soundcloud.com/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*.png",
        "assets/icons/*.svg"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://*.soundcloud.com/*"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
